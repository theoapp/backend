{
  "extends": [
    "standard",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "parser": "babel-eslint",
  "rules": {
    "no-undef": "warn",
    "no-use-before-define": "warn",
    "no-console": "off",
    "camelcase": "off",
    "prettier/prettier": [
      "error",
      {
        "arrowParens": "avoid",
        "printWidth": 120,
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "parser": "flow",
        "semi": true
      }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  }
}
